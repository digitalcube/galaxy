{
  "name": "dc-pattern-lib",
  "version": "1.2.0",
  "description": "dc-pattern-lib React component",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "build": "npm run build-css && nwb build-react-component --copy-files",
    "clean": "nwb clean-module && nwb clean-demo",
    "prepublishOnly": "npm run build",
    "start-nwb": "nwb serve-react-demo",
    "start": "npm-run-all -p watch-css start-nwb storybook",
    "test": "nwb test-react",
    "test:coverage": "nwb test-react --coverage",
    "test:watch": "nwb test-react --server",
    "lint": "eslint src/",
    "storybook": "start-storybook -p 6006",
    "postversion": "git push origin $(git describe --abbrev=0 --tags)",
    "build-storybook": "build-storybook",
    "format": "prettier-eslint --write \"src/**/*.js\" \"src/**/*.jsx\""
  },
  "dependencies": {
    "@storybook/addon-info": "^5.2.6",
    "@storybook/addon-knobs": "^5.2.6",
    "@storybook/react": "^5.2.6",
    "@storybook/theming": "^5.2.6",
    "prop-types": "^15.7.2",
    "react-content-loader": "^4.3.2",
    "react-copy-to-clipboard": "^5.0.2",
    "react-gravatar": "^2.6.3",
    "react-icons": "^3.8.0",
    "react-router-dom": "^5.1.2",
    "reactstrap": "^8.1.1",
    "storybook": "^5.1.11"
  },
  "peerDependencies": {
    "react": "16.x"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@storybook/addon-actions": "^5.2.6",
    "@storybook/addon-links": "^5.2.6",
    "@storybook/addons": "^5.2.6",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "bootstrap": "^4.3.1",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-flowtype": "^3.13.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-standard": "^4.0.1",
    "flow-bin": "^0.102.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "node-sass-chokidar": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "nwb": "0.23.x",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "",
  "homepage": "",
  "license": "MIT",
  "repository": "",
  "keywords": [
    "react-component"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier-eslint --write",
      "./node_modules/.bin/eslint",
      "git add"
    ]
  }
}
